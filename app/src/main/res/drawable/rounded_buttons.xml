<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Background color -->
    <solid android:color="#000080"/> <!-- Replace with your desired button color -->

    <!-- Corner radius for rounded corners -->
    <corners android:radius="16dp"/> <!-- Adjust the radius to make corners more or less rounded -->

    <!-- Optional: Add padding inside the button -->
    <padding
        android:left="10dp"
        android:right="10dp"
        android:top="10dp"
        android:bottom="10dp" />

    <!-- Optional: Add a stroke (border) around the button -->
    <stroke
        android:width="2dp"
        android:color="#FFFFFF"/> <!-- Change the color and width of the border as neededÂ -->
</shape>